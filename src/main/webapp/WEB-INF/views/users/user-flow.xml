<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <secured attributes="ROLE_USER" />

    <persistence-context/>

    <on-start>
        <evaluate expression="UserService.createUser(userName, password, name)" result="flowScope.user" />
    </on-start>

    <view-state id="enterSignupDetail" model="user">
        <binder>
            <binding property="usename" required="true" />
            <binding property="name" required="true" />
            <binding property="password" required="true" />
        </binder>
        <transition on="proceed" to="reviewSignup" />
        <transition on="cancel" to="cancel" bind="false" />
    </view-state>

    <view-state id="reviewSignup" model="user">
        <transition on="confirm" to="signupConfirmed" />
        <transition on="revise" to="enterSignupDetail" />
        <transition on="cancel" to="cancel" />
    </view-state>

    <end-state id="signupConfirmed" commit="true" >
        <on-entry>
            <evaluate expression="UserService.CreateUser(flowScope.user)" result="flowScope.user" />
        </on-entry>
    </end-state>

    <end-state id="cancel" />

    <on-end>

    </on-end>

</flow>